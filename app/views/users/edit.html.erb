<h1>Edit User</h1>

<%= form_for(@user) do |f| %>
  <%= render 'fields', :f => f %>
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<div>
  <%= gravatar_for @user %>
  <%= link_to 'change', "http://gravatar.com/emails", :target => '_blank' %>
  <% #This would be a great place for a jquerry iFrame %>
</div>